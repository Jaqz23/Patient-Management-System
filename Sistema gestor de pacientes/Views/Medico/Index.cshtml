@using SGP.Core.Application.ViewModels.Medico
@model List<MedicoViewModel>

@{
    ViewData["Title"] = "Mantenimiento de Médicos";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Lista de Médicos</h2>
        <a asp-controller="Medico" asp-action="Crear" class="btn btn-outline-success">➕ Nuevo Médico</a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            <h4>No hay médicos registrados en este consultorio.</h4>
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark text-center">
                <tr>
                    <th>Foto</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Cédula</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var medico in Model)
                {
                    <tr>
                        <td class="text-center">
                            <img src="@medico.Foto" alt="Foto Médico" class="img-thumbnail" style="width: 60px; height: 60px;">
                        </td>
                        <td>@medico.Nombre</td>
                        <td>@medico.Apellido</td>
                        <td>@medico.Correo</td>
                        <td>@medico.Telefono</td>
                        <td>@medico.Cedula</td>
                        <td class="text-center">
                            <a asp-controller="Medico" asp-action="Editar" asp-route-id="@medico.Id" class="btn btn-sm btn-outline-info">Editar</a>
                            <a asp-controller="Medico" asp-action="Eliminar" asp-route-id="@medico.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
