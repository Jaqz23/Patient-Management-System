@using SGP.Core.Application.ViewModels.ResultadoLaboratorio
@model SaveResultadoLaboratorioViewModel

@{
    ViewData["Title"] = "Reportar Resultado de Laboratorio";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>Reportar Resultado</h4>
                </div>
                <div class="card-body">

                    <form method="post" asp-controller="ResultadoLaboratorio" asp-action="Reportar">
                        <div class="mb-3">
                            <label asp-for="Resultado" class="form-label">Resultado:</label>
                            <textarea asp-for="Resultado" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Resultado" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-success">Finalizar</button>
                        <a asp-controller="ResultadoLaboratorio" asp-action="Index" class="btn btn-warning">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
