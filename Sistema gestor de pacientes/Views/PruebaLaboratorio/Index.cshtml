@using SGP.Core.Application.ViewModels.PruebaLaboratorio;
@model List<PruebaLaboratorioViewModel>

@{
    ViewData["Title"] = "Pruebas de Laboratorio";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Pruebas de Laboratorio</h2>
        <a asp-controller="PruebaLaboratorio" asp-action="Crear" class="btn btn-outline-success">➕ Nueva Prueba</a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            <h4>No hay pruebas de laboratorio registradas en este consultorio.</h4>
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var prueba in Model)
                {
                    <tr>
                        <td>@prueba.Id</td>
                        <td>@prueba.Nombre</td>
                        <td class="text-center">
                            <a asp-controller="PruebaLaboratorio" asp-action="Editar" asp-route-id="@prueba.Id" class="btn btn-sm btn-outline-info">Editar</a>
                            <a asp-controller="PruebaLaboratorio" asp-action="Eliminar" asp-route-id="@prueba.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

