@using SGP.Core.Application.ViewModels.Paciente;
@model SavePacienteViewModel
@{
    ViewData["Title"] = "Eliminar Paciente";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>¿Está seguro que desea eliminar el Paciente @Model.Nombre @Model.Apellido ?</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Paciente" asp-action="ConfirmarEliminar">

                        <input type="hidden" asp-for="Id" />

                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a asp-controller="Paciente" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>